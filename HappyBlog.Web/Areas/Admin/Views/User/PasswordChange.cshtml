@model HappyBlog.Entities.DTOs.UserPasswordChangeDTO

@{
    Layout = "_Layout";
    ViewBag.Title = "Şifre Değiştir";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> Şifre Değiştir</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" enctype="multipart/form-data" asp-action="PasswordChange" method="post">

                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>

                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input class="form-control" asp-for="CurrentPassword" type="password" placeholder="Eski Şifrenizi Giriniz..." />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="NeWPassword"></label>
                        <input class="form-control" asp-for="NeWPassword" type="password" placeholder="Yeni Şifrenizi Giriniz..." />
                        <span class="text-danger" asp-validation-for="NeWPassword"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input class="form-control" asp-for="RepeatPassword" type="password" placeholder="Yeni Şifrenizi Giriniz (Tekrar)..." />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Şifre Değiştir</button>

                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-danger btn-block"><span class="fas fa-times"></span> İptal</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>